
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th><th>Email</th><th>Phone</th>
          </tr>
        </thead>
        <tbody>
          <% @candidate_profiles.each do |candidate| %>
            <tr>
              <td><%= link_to candidate.name, [:admin, candidate] %></td>
              <td><%= candidate.email %></td>
              <td><%= candidate.phone %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
